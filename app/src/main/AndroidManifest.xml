<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="0"
    android:versionCodeMajor="1"
    android:revisionCode="0"
    android:versionName="beta">

    <!-- Storage permissions for accessing external storage -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- For Android 11+ (API 30+) to access all files -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    
    <!-- For Android 13+ (API 33+) granular media permissions -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    
    <!-- Battery status monitoring -->
    <uses-permission android:name="android.permission.BATTERY_STATS" />
    <!-- Foreground service and notifications -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.nwipe_android.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.nwipe_android.FileBrowserActivity"
            android:label="File Browser"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="com.example.nwipe_android.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nwipe_android.MainActivity" />
        </activity>
        
        <activity
            android:name="com.example.nwipe_android.SystemFileBrowserActivity"
            android:label="System File Browser"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="com.example.nwipe_android.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nwipe_android.MainActivity" />
        </activity>

        <activity
            android:name="com.example.nwipe_android.StorageSelectionActivity"
            android:label="Select Storage"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="false"
            android:parentActivityName="com.example.nwipe_android.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nwipe_android.MainActivity" />
        </activity>

        <activity
            android:name="com.example.nwipe_android.CertificatesViewerActivity"
            android:label="Certificates"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="false"
            android:parentActivityName="com.example.nwipe_android.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nwipe_android.MainActivity" />
        </activity>
        
        <service
            android:name=".WipeService"
            android:exported="false"
            android:foregroundServiceType="dataSync">
        </service>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>

        <receiver
            android:name=".SecureWipeDeviceAdminReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="true">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_policies" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>