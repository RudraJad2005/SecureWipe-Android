<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.nwipe_android.MainActivity">
    <item
        android:id="@+id/action_close"
        android:icon="@android:drawable/ic_menu_close_clear_cancel"
        android:onClick="onCloseButtonClick"
        android:orderInCategory="200"
        android:title="@string/close_button_title"
        app:showAsAction="always" />

    <item
        android:id="@+id/action_enable_admin"
        android:title="Enable Device Admin"
        android:icon="@android:drawable/ic_menu_manage"
        android:onClick="onEnableDeviceAdminClick"
        android:orderInCategory="300"
        app:showAsAction="never" />

    <item
        android:id="@+id/action_factory_reset"
        android:title="Factory Reset (Admin)"
        android:icon="@android:drawable/ic_menu_delete"
        android:onClick="onFactoryResetClick"
        android:orderInCategory="400"
        app:showAsAction="never" />

    <item
        android:id="@+id/action_select_storage"
        android:title="Select Target Storage"
        android:icon="@android:drawable/ic_menu_set_as"
        android:onClick="onSelectStorageClick"
        android:orderInCategory="500"
        app:showAsAction="never" />

    <item
        android:id="@+id/action_view_certificates"
        android:title="View Certificates"
        android:icon="@android:drawable/ic_menu_view"
        android:onClick="onViewCertificatesClick"
