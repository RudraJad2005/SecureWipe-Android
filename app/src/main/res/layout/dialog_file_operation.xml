<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Dialog Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_info_24"
            android:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/dialog_title"
            style="@style/AppTheme.Text.HeadlineSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="File Operation"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- File Information Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/file_info_card"
        style="@style/AppTheme.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/file_type_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_file_24"
                android:background="@drawable/file_icon_background"
                android:padding="8dp"
                android:tint="?attr/colorOnSecondaryContainer" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/file_name_text"
                    style="@style/AppTheme.Text.TitleMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="filename.txt"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/file_details_text"
                    style="@style/AppTheme.Text.BodySmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="File â€¢ 1.2 MB"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Dialog Message -->
    <TextView
        android:id="@+id/dialog_message"
        style="@style/AppTheme.Text.BodyLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to perform this operation?"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="16dp" />

    <!-- Warning Message (if applicable) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/warning_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/colorErrorContainer"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_warning_24"
                android:tint="?attr/colorOnErrorContainer" />

            <TextView
                android:id="@+id/warning_message"
                style="@style/AppTheme.Text.BodySmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="This is a system file and may be protected."
                android:textColor="?attr/colorOnErrorContainer" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm_button"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm" />

    </LinearLayout>

</LinearLayout>